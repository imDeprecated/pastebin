extends layout

block content
    script(type='text/javascript' src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js')
    script hljs.initHighlightingOnLoad();
    div(class='content')
        table(class='container')
            tbody
                tr(class='minimal')
                    td
                        p Paste #{_id} submitted #{moment(date).format('MMMM Do YYYY,  h:mm a')}
                        p #[a(href="/r/#{_id}") View RAW]
                tr(class='stretched')
                    td
                        pre(class='container')
                            code #{paste}